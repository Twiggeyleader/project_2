<section>
        <h2>This is  question  <%= @question.id %> </h2>
        <h2> Title: <%= @question.title %> </h2>
        <h4> <strong>Body: <%= @question.body %></strong> </h4>
</section>

<section>
    <h1>Answers</h1>
    <%@question.answers.each do |answer|%>
        <div>
              <h3><%= answer.body%></h3>
        </div>
    <% end %>  
</section>

<section>
       <h2>Answer that Ish!</h2>
       <%= form_for [@question, @answer] do |f|%>

            <div>
                  <%= f.label :body%>
                  <%= f.text_area :body%>
            </div>

            <%= f.submit "Answer that Ish!" %>
      <% end %>

      <%= link_to "Edit question", edit_question_path(@question)%>
      <%= link_to "Back to question!", questions_path%>
      <%= link_to "Delete this question!", question_path, method: :delete, data: {confirm: "Are you sure you want to delete this question?"} %>
</section>